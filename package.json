{
  "name": "secure-space-backend",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/app.js",
    "clean": "rimraf build",
    "build:watch": "npm run clean && tsc -w",
    "start:watch": "nodemon --enable-source-maps --watch build build/app.js",
    "migration:generate": "node -r ts-node/register ./node_modules/typeorm/cli.js -d src/migration-entry.ts migration:generate src/migrations/%npm_config_name%",
    "migration:show": "node -r ts-node/register ./node_modules/typeorm/cli.js -d src/migration-entry.ts migration:show",
    "migration:upgrade": "node -r ts-node/register ./node_modules/typeorm/cli.js -d src/migration-entry.ts migration:run",
    "migration:downgrade": "node -r ts-node/register ./node_modules/typeorm/cli.js -d src/migration-entry.ts migration:revert"
  },
  "dependencies": {
    "express": "^5.2.1",
    "joi": "^18.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.8.3"
  }
}
