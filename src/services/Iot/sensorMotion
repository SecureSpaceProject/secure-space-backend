#include <WiFi.h>
#include <HTTPClient.h>

const char* WIFI_SSID = "Wokwi-GUEST";
const char* WIFI_PASS = "";

String BASE_URL = "http://inga-gadgety-tomas.ngrok-free.dev"; // Replace with your backend URL
String SENSOR_ID = "5dedd8fc-86bb-42fa-8748-05a26b2ce50f"; // Replace with your sensor ID
String DEVICE_SECRET = "ld2SRtaGTMiBr07ErLOEVbExnRzfsszN"; // Replace with your device secret

void connectWiFi() {
  Serial.print("Connecting to WiFi");
  WiFi.begin(WIFI_SSID, WIFI_PASS);

  while (WiFi.status() != WL_CONNECTED) {
    delay(300);
    Serial.print(".");
  }

  Serial.println("\nWiFi connected");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());
}

void sendMotionEvent() {
  String url = BASE_URL + "/iot/" + SENSOR_ID + "/events";
  String body = "{}";

  Serial.println("Sending MOTION event");

  HTTPClient http;
  if (!http.begin(url)) {
    Serial.println("http.begin failed");
    return;
  }

  http.addHeader("Content-Type", "application/json");
  http.addHeader("X-Device-Secret", DEVICE_SECRET);

  int code = http.POST(body);

  Serial.print("HTTP ");
  Serial.println(code);

  if (code > 0) {
    Serial.println(http.getString());
  }

  http.end();
}

void setup() {
  Serial.begin(115200);
  delay(300);

  connectWiFi();

  Serial.println("\n=== MOTION SENSOR READY ===");
  Serial.println("Type:");
  Serial.println("  m + Enter  -> MOTION");
}

void loop() {
  if (Serial.available()) {
    char cmd = Serial.read();

    if (cmd == 'm' || cmd == 'M') {
      sendMotionEvent();
    }
  }
}
